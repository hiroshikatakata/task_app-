<div class="container-fiuld room">
<h4 class="pb-4">検索結果</h4>
<div class="row">
<% @results.each do |room| %>
 <div class="col-sm-6 col-lg-4 col-xl-3">
 <div class="room-frame-inner">
  <a href="/rooms/<%= room.id %>">
 <div class="room-image-out">
    <% if room.icon? %>
      <img class="room-image" alt="メニュー" src="<%= "#{room.icon.url}" %>">
    <% else %>
      <img class="room-image" alt="メニュー" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg">
     <% end %>
 </div>
 <div class="room-profile">
  <p class="room-profile-name"><%= room.name %></p>
  <p class="room-profile-city"><%= room.address %></p>
  <p class="room-profile-price price-icon"><%= room.price %></p>
 </div>
 </a>
 </div>
 </div>
<% end %>
</div>
</div>
