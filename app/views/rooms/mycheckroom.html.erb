<p style="color: green"><%= notice %></p>

<div class="container-fiuld reservations">
<h4 class="pb-4">予約済みルーム一覧</h4>

<table>
 <thead>
  <tr>
   <th>ルーム画像</th>
   <th>ルーム名</th>
   <th>ルーム紹介</th>
   <th>合計料金</th>
   <th>開始日</th>
   <th>終了日</th>
   <th>予約確定日時</th>
  </tr>
 </thead>

<tbody>
  <% @reservation.each do |room| %>
  <tr>
   <td><% if room.icon? %>
      <img class="myroom_icon" alt="メニュー" src="<%= "#{room.icon.url}" %>">
   <% else %>
   　 <img class="myroom_icon" alt="メニュー" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg">
   <% end %>
   </td>
   <td><%= link_to "#{room.name}", action: "show" ,id: room.room_id%></td>
   <td><%= room.introduction %></td>
   <td>¥<%= room.cost %></td>
   <td><%= room.start_date %></td>
   <td><%= room.end_date %></td>
   <td><%= room.created_at.to_s(:datetime_jp) %></td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>
